<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dpsn.espice.itcuttingedge" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DeCryptonite.LoginActivity"
            android:label="DeCryptonite"/>
        <activity android:name=".DeCryptonite.InfoActivity"
            android:screenOrientation="userPortrait"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth"/>
        <activity android:name=".DeCryptonite.DisqualifyActivity"
            android:screenOrientation="userPortrait"/>
        <activity android:name=".DeCryptonite.NavigationDrawerActivity"
            android:screenOrientation="userPortrait"
            android:label="DeCryptonite"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>
    </application>

</manifest>
